<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/a2_tv_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/a2_tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/a2_tv_nick"
        app:layout_constraintStart_toEndOf="@+id/a2_tv_nick"
        app:layout_constraintTop_toTopOf="@+id/a2_tv_nick" />

    <TextView
        android:id="@+id/a2_tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/a2_tv_gender"
        app:layout_constraintStart_toEndOf="@+id/a2_tv_gender"
        app:layout_constraintTop_toTopOf="@+id/a2_tv_gender" />

    <TextView
        android:id="@+id/a2_tv_psc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/a2_tv_age"
        app:layout_constraintStart_toEndOf="@+id/a2_tv_age"
        app:layout_constraintTop_toTopOf="@+id/a2_tv_age"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/a2_tv_glasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/a2_tv_psc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/a2_tv_psc"
        app:layout_constraintTop_toTopOf="@+id/a2_tv_psc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a2_tv_nick"
        app:layout_constraintVertical_bias="0.007"></LinearLayout>

</android.support.constraint.ConstraintLayout>